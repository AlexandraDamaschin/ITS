<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.its.MainActivity">

    <!--Linear layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--ITS name view-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_margin"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="@dimen/title_padding"
            android:text="@string/ITS"
            android:textSize="@dimen/text_size" />

        <!--Logo image-->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/logo_height"
            android:layout_marginTop="@dimen/title_margin"
            android:layout_weight="1"
            android:src="@drawable/itsligo_logo" />


        <!--Website button-->
        <Button
            android:id="@+id/button_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"
            android:autoLink="web"
            android:clickable="true"
            android:focusable="true"
            android:linksClickable="true"
            android:onClick="goTo"
            android:padding="@dimen/button_padding"
            android:text="@string/button_website" />

        <!--details about school-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/title_padding"
            android:text="@string/details"
            android:textSize="@dimen/text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--Address view-->
            <ImageView
                android:id="@+id/adress_icon"
                android:layout_width="30dp"
                android:layout_height="@dimen/icon_size"
                android:layout_alignLeft="@+id/email_address"
                android:layout_marginLeft="@dimen/address_margin"
                android:layout_weight="1"
                android:src="@drawable/address_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:padding="@dimen/title_padding"
                android:text="@string/address"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--email address-->
            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_alignLeft="@+id/email_address"
                android:layout_marginLeft="@dimen/email_marginLeft"
                android:layout_marginTop="@dimen/email_marginTop"
                android:layout_weight="1"
                android:src="@drawable/email_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:padding="@dimen/title_padding"
                android:text="@string/email"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
